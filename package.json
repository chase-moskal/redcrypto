{
	"name": "redcrypto",
	"version": "0.0.0-dev.3",
	"description": "simple token and signature crypto",
	"license": "ISC",
	"author": "Chase Moskal <chasemoskal@gmail.com",
	"type": "module",
	"files": [
		"dist",
		"source",
		"generate-keys"
	],
	"scripts": {
		"prepare": "run-s clean && run-p compile generate-keys && run-s test",
		"clean": "rimraf dist && mkdirp dist",
		"compile": "tsc",
		"watch": "npm run compile -s -- --watch",
		"generate-keys": "./generate-keys",
		"start": "serve",
		"test": "cynic node --label='redcrypto tests (node)' dist/internals/tests/redcrypto.test.js"
	},
	"keywords": [
		"auth",
		"authoritarian",
		"crypto",
		"cryptography",
		"signature",
		"token",
		"jsonwebtoken",
		"jwt",
		"node",
		"javascript",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/chase-moskal/redcrypto.git"
	},
	"bugs": {
		"url": "https://github.com/chase-moskal/redcrypto/issues"
	},
	"homepage": "https://github.com/chase-moskal/redcrypto#readme",
	"devDependencies": {
		"@types/node": "^13.1.8",
		"cynic": "0.1.0-dev.4",
		"importly": "0.1.0-dev.0",
		"mkdirp": "^0.5.1",
		"npm-run-all": "^4.1.5",
		"puppeteer": "^2.0.0",
		"replace": "^1.1.5",
		"rimraf": "^3.0.0",
		"serve": "^11.3.0",
		"typescript": "^3.7.4"
	},
